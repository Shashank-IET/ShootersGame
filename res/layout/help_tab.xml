<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:paddingBottom="20dp"
        android:paddingTop="50dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="100dp" >

            <TextView
                android:id="@+id/HelpDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#8000"
                android:paddingStart="10dp"
                android:text="Touch the screen to generate bullets in desired direction.\nIfTouch the screen to generate bullets in desired direction.\nIfTouch the screen to generate bullets in desired direction.\nIfTouch the screen to generate bullets in desired direction.\nIfTouch the screen to generate bullets in desired direction.\nIfTouch the screen to generate bullets in desired direction.\nIfTouch the screen to generate bullets in desired direction.\nIf"
                android:textColor="#F8D888"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/HelpDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text=" "
            android:textColor="#ffff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/Home_button_helptab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/homebutton"
            android:scaleX="1"
            android:scaleY="1" />
    </LinearLayout>

</LinearLayout>